<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/review_item_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="16dp"
        android:src="@drawable/profile_image"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/review_item_image"
        app:layout_constraintTop_toTopOf="@+id/review_item_image"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        android:textSize="20sp"
        android:textColor="#000"
        android:id="@+id/review_item_name"
        tools:text="Khan L Khalile"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/review_item_name"
        app:layout_constraintTop_toBottomOf="@+id/review_item_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="16sp"
        android:id="@+id/review_item_description"
        android:layout_marginStart="8dp"
        tools:text="Khan L Khalile"
        />

</android.support.constraint.ConstraintLayout>