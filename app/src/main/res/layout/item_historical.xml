<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="11dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        app:cardElevation="@dimen/cardview_default_elevation"
        app:cardCornerRadius="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:id="@+id/img"
                android:transitionName="img"
                android:src="@drawable/phototest"
                tools:ignore="UnusedAttribute" />
            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/progress_load_photo"
                style="@android:style/Widget.ProgressBar.Small"
                android:layout_marginTop="70dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nameOfPlaces"
                android:drawablePadding="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#fff"
                android:singleLine="true"
                android:textStyle="bold"
                android:textSize="26sp"
                android:layout_marginTop="140dp"
               android:layout_marginLeft="8dp"
                android:text="Egyption Museum"
                android:gravity="bottom"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:text="Title"
                android:layout_below="@id/img"
                android:textColor="#000"
                android:id="@+id/title"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/durationOfPlaces"
                android:layout_below="@id/title"
                android:layout_marginTop="5dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="open until 5 pm"
                android:textSize="18sp"
                android:textColor="#000"
                />
            <TextView
                android:id="@+id/discriptionOfHistoricalPlaces"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/durationOfPlaces"
                android:drawablePadding="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#000"
                android:singleLine="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Tracing 5000 years of egyption history"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:textSize="18sp"
                android:padding="8dp"
                />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</FrameLayout>