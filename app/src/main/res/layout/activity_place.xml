<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Place.PlaceActivity">

        <android.support.v7.widget.Toolbar
            android:id="@+id/place_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#020F22"
            android:elevation="4dp"
            app:layout_constraintTop_toTopOf="parent"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/let"
                    android:layout_weight="1"
                    />
            </LinearLayout>
        </android.support.v7.widget.Toolbar>
        <ImageView
            android:id="@+id/main_place_img"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            app:layout_constraintTop_toBottomOf="@+id/place_toolbar"
            tools:src="@drawable/back"
            android:layout_margin="8dp"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/main_place_img"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="PlaceName"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:textStyle="bold"
            android:textSize="24sp"
            android:id="@+id/main_place_name"
            />


        <TextView
            android:id="@+id/main_place_description"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            tools:text="sssssssssssssssssssssssssss"
            android:textSize="20sp"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@+id/main_place_name"
            app:layout_constraintStart_toStartOf="parent"
            />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/reviews_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/main_place_description"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:padding="16dp"
             />
        <Button
            android:id="@+id/size_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="show more"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reviews_container" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingActionButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            app:layout_constraintTop_toBottomOf="@+id/size_button"
            app:layout_constraintEnd_toEndOf="@+id/place_toolbar"
            app:srcCompat="@android:drawable/ic_input_add"

            />
    </android.support.constraint.ConstraintLayout>




</android.support.v4.widget.NestedScrollView>
